# API Authentication
# Store multiple API keys as JSON in this environment variable
# Each key has its own unique salt - no shared SECRET_SALT needed!
# Generate keys using: python authentication/generate_api_key.py [key_name]
# Format: {"keys": {"<hash>": {"salt": "<unique_salt>", "name": "...", "created_at": "...", "is_active": true}}}

API_KEYS_JSON={"keys": {}}

# Gemini API Configuration
GEMINI_API_KEY = your-api-key-here
GEMINI_MODEL = your-gemini-model

#Database Configuration
DATABASE_PATH = your-database-path

#CALLBACK-URL
CALLBACK_URL = your-callback-URL

#Server Configuration
PORT = 8000